<% provide(:title,"View | Roles") %>
<% content_for :account_page_content do %>
<p id="notice"><%= notice %></p>
<h1>Product</h1>
<table class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
   <tr>
     <td><%= @role.name %></td>
     <td><%= @role.description %></td>
   </tr>
  </tbody>
</table>
<%= link_to 'Edit', edit_role_path(@role) %> |
<%= link_to 'Back', roles_path %>
<% end %>

<%= render template: "layouts/account" %>
