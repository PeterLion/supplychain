<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="table table-striped">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <select>
             <% @roles.each do |role| %>
             <option value=<%= role.id %>><%= role.name %></option>
             <% end %>
          </select>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Add User", new_user_registration_path ,class: 'nav-link' %>
